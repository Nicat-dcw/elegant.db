  "compilerOptions": {
    "target": "ES2021",
    "module": "Commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist/esm",
    "moduleResolution": "node",
  },
  "include": [
    "./"
  ],
  "exclude": ["node_modules", "build"],
}
